    <script>
        function changeImage1(event) {
            document.getElementById('imageView1').src = URL.createObjectURL(event.target.files[0])
        }
        function changeImage2(event) {
            document.getElementById('imageView2').src = URL.createObjectURL(event.target.files[0])
        }
        function changeImage3(event) {
            document.getElementById('imageView3').src = URL.createObjectURL(event.target.files[0])
        }

        function _(element){
            return document.getElementById(element)
        }
        function fetch_data(parent_element,chiled_element,type){
            fetch('/admin/get_data?type='+type+'&parent_value='+parent_element.value+'')
            .then((response)=>{
               
                return response.json()

            })
            .then((responseData)=>{
                console.log(responseData)
                var html ='';
                if(type=='load_state'){
                    html='<option value="">slect category</option>';

                }
                for(var i=0; i<responseData.length;i++){
                    html+='<option value="'+responseData[i]+'">'+responseData[i]+'</option>'
                }
                chiled_element.innerHTML=html


            })

        }
        _('contry').onchange=function(){
            fetch_data(_('contry'),_('state'),'load_state')
        }

    </script>


