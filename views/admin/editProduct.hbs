                    <div class="card">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12"></div>
                        <h5 class="card-header">Edit Product</h5>

                        <div class="card-body">
                            <form class="needs-validation" method="post" action="/admin/update-products/{{product._id}}" enctype="multipart/form-data">
                                <div class="row">










                                    <div class="col-xl-6 col-lg-4 col-md-12 col-sm-12 col-12 ">
                                        <label for="validationCustom01">Title</label>
                                        <input type="text" class="form-control" id="validationCustom01"
                                            placeholder="Title" required name="title" value="{{product.title}}">
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>






                                    <div class="form-row">
                                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                                            <label for="validationCustom02">Parent Category</label>

                                            <select class="form-control" name="parentCategory" id="contry">
                                                
                                                <option>Choose options</option>
                                                {{#each parent}}
                                                <option value="{{this}}">{{this}}</option>
                                                {{/each}}
                                            
                                            </select>

                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                                            <label for="validationCustom02">category</label>

                                            <select class="form-control" name="subCategory" id="state">
                                                <option>Choose category </option>
                                               

                                            </select>

                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                                            <label for="validationCustom02">brand</label>

                                            <select class="form-control" id="input-select" name="brand">
                                                <option>Choose brand</option>
                                                {{#each brand}}

                                                <option value="{{this.brandName}}">{{this.brandName}}</option>
                                                {{/each}}
                                            

                                            </select>

                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                                            <label for="validationCustom02">Description</label>
                                            <textarea rows="4" cols="50" name="description"  class="form-control" placeholder="Type here......" id="description" >{{product.description}}
</textarea>
                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                                            <label for="validationCustom02">Price</label>
                                            <input type="text" class="form-control" id="validationCustom02"
                                                placeholder="price" value="{{product.price}}" name="price" required>
                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                                            <label for="validationCustom02">Offer Price</label>
                                            <input type="text" class="form-control" id="validationCustom02"
                                                placeholder="offerPrice" value="{{product.offerPrice}}" name="offerPrice" required>
                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-row">
                                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                                            <label for="validationCustom02">Quntity </label>
                                            <input type="number" class="form-control" id="validationCustom02"
                                                placeholder="Quntity " value="{{product.stock}}" name="stock">
                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                                            <label for="validationCustom02">Color</label>

                                            <select class="form-control" name="color" >
                                                <option value="">Choose color</option>
                                                <option value="red" {{isSelected product.color "red"}}>Red</option>
                                                <option value="blue" {{isSelected product.color "blue"}}>Blue</option>
                                                <option value="black" {{isSelected product.color "black"}}>Black</option>
                                                <option value="yellow" {{isSelected product.color "yellow"}}>Yellow</option>
                                                <option value="white" {{isSelected product.color "white"}}>White</option>
                                                <option value="green" {{isSelected product.color "green"}}>Green</option>
                                                <option value="pink" {{isSelected product.color "pink"}}>Pink</option>
                                                <option value="orange" {{isSelected product.color "orange"}}>Orange</option>

                                                <option value="purple">Purple</option>

                                            </select>

                                            
                                        </div>
                                        
                                    </div>
                                    <div class="form-row">
                                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                                            <label for="validationCustom02">Image 1</label>
                                            <input type="file" class="form-control" id="validationCustom02"
                                                placeholder="" value="{{product.image.[0].iamge_url}}" name="image1" onchange="changeImage1(event)">
                                            <img src="{{product.image.[0].iamge_url}}" alt="" id="imageView1" width="100px" height="75px">
                                            <div class="valid-feedback">
                                                Looks good!
