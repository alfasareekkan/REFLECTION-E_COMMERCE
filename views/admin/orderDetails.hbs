    <script>
        function orderStatusChange(constantId, orderId) {
            event.preventDefault();
            let orderStatusForm = document.getElementById("orderStatus" + constantId)
            let formDataOfOrderStatus = new FormData(orderStatusForm);
            dataToSend = Object.fromEntries(formDataOfOrderStatus);
            console.log(dataToSend);
            fetch("/admin/v1/change-order-status", {
                method: "POST",
                body: JSON.stringify({ orderStatus: dataToSend.orderStatus, constantId, orderId }),
                headers: {
                    'content-type': 'application/json',
                }
            })

        }
    </script>


