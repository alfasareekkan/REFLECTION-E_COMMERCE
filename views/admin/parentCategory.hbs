    <script type="text/javascript">
        function Validate() {
            var subCategory = document.getElementById("subCategory");
            var parentCategory = document.getElementById("parentCategory");
            if (subCategory.value == "") { //If the "Please Select" option is selected display error. 
                alert("Please enter category!"); return false;
            }
            else if (parentCategory.value == "") { alert("Please select an option!"); return false; }
            return true;
        }
        

