    <script>
        function deleteParentCategory(id) {
            fetch('http://localhost:3000/admin/parent-category/' + id + '/' + id, {
                method: 'PATCH'
            })
        }
        function blockParentCategory(id) {
            console.log(id)
            fetch('http://localhost:3000/admin/parent-category/' + id + '/' + id, {
                method: 'POST'
            }).then((response) => response.json()).then((response) => {
                if (response.status) {

                    document.getElementById('parent-category' + id).innerHTML = 'Publish'
                    document.getElementById('parent-category' + id).style.color = "green";

                }
                else {
                    document.getElementById('parent-category' + id).innerHTML = 'Unlist'
                    document.getElementById('parent-category' + id).style.color = "red";

                }


            })
        }
        function changeImage(event) {
            document.getElementById('imageView').src = URL.createObjectURL(event.target.files[0])
        }
    </script>

