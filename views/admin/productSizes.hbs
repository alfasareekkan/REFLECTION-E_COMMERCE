                        <div class="card-header d-flex justify-content-between">
                            <h5 class="d-inline ">Sizes</h5>
                            <button class="d-inline btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#addbrands">Add Sizes</button>

                        </div>
                        <div class="modal fade " id="addbrands" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Add Sizes</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form method="post" action="/admin/add-products-size" id="form" >
                                            {{!-- {{#if categorIsCheck}}
                                <p>This category alredy exist</p>
                                {{/if}} --}}
                                            <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">
                                        Category</label>
                                    <select class="form-select form-select-disabled-color"
                                        aria-label="Default select example" name="categoryId" id="parentCategory"
                                        required>
                                        <option selected value="">Options</option>
                                        {{#each categories}}
                                            <option value="{{this._id}}">{{this.subCategory}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                            <div class="form-group">
                                                <label for="recipient-name" class="col-form-label">Sizes
                                                    </label>
                                                <input type="text" class="form-control" placeholder="Enter Size"
                                                    name="size" required />
                                            </div>
                                            


                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Close</button>
                                                <input type="submit" class="btn btn-primary" value="Add"
                                                    onclick="return Validate()" />
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>



                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered first" id="example-1">
                                    <thead>
                                        <tr>
                                            <th>Category</th>
                                            
                                            <th>Sizes</th>
                                            <th>Actions</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each sizes}}
                                        <tr>
                                            <td rowspan="{{this.count}}">{{this.result.[0].subCategory}}</td>
                                             <tr>
                                            {{#each this.ListOfName}}
                                            
                                           
                                            <td>
                                                {{this.size}}<br>
                                            </td>
                                            
                                            <td>
                                                <span>
                                                        <a href="javascript:void()" data-toggle="modal"
                                                            data-target="#exampleModal2{{this.id}}"
                                                            data-placement="top" title="Delete"><i
                                                                class="fa fa-trash color-danger"></i></a></span>
                                            </td>
                                            </tr>

                                            <div class="modal fade" id="exampleModal2{{this.id}}" tabindex="-1"
                                                aria-labelledby="exampleModalLabel2{{this.id}}" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel2{{this.id}}">
                                                                Delete category </h5>
                                                            <button type="button" class="close" data-dismiss="modal"
                                                                aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">

                                                            Delete <b>{{this.size}} </b> size from {{../this.result.[0].subCategory}}
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-light"
                                                                data-dismiss="modal">Close</button>
                                                            <a href="" type="button" onclick="delete1('{{this.id}}')"
                                                                class="btn btn-danger">

                                                                Delete
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {{/each}}
                                            </tr>
                                             
                                            
                                        </tr>
                                         

